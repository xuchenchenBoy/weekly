<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Weekly</title>
    <style>
      .loading {
        transform: rotateZ(45deg);
        perspective: 1000px;
        border-radius: 50%;
        position: fixed;
        left: 50%;
        top: 50%;
        z-index: 999;
        transform: translate(-50%, -50%);
        width: 60px;
        height: 60px;
        color: inherit;
        vertical-align: middle;
        pointer-events: none;
      }

      @keyframes spin {
        0%,
        100% {
          box-shadow: 6px 0px 0 0px #1890ff;
        }
        12% {
          box-shadow: 6px 6px 0 0 #1890ff;
        }
        25% {
          box-shadow: 0 6px 0 0px #1890ff;
        }
        37% {
          box-shadow: -6px 6px 0 0 #1890ff;
        }
        50% {
          box-shadow: -6px 0 0 0 #1890ff;
        }
        62% {
          box-shadow: -6px -6px 0 0 #1890ff;
        }
        75% {
          box-shadow: 0px -6px 0 0 #1890ff;
        }
        87% {
          box-shadow: 6px -6px 0 0 #1890ff;
        }
      }

      .loading:before,
      .loading:after {
        content: '';
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: inherit;
        height: inherit;
        border-radius: 50%;
        -webkit-animation: 1s spin linear infinite;
        animation: 1s spin linear infinite;
      }

      .loading:before {
        transform: rotateX(70deg);
      }

      .loading:after {
        transform: rotateY(70deg);
        animation-delay: 0.4s;
      }
    </style>
  </head>
  <body>
    <div id="root">
      <div class="loading"></div>
    </div>
  </body>
</html>
